{
  "name": "vocabmeld",
  "version": "1.0.0",
  "description": "沉浸式语言学习 Chrome 插件 - 在日常浏览中自然习得语言",
  "scripts": {
    "build": "node scripts/build.js",
    "watch": "node scripts/build.js --watch",
    "build:firefox": "node scripts/build-firefox.js",
    "test:firefox": "web-ext run -s dist/firefox",
    "package:firefox": "web-ext build -s dist/firefox -a dist --overwrite-dest --filename vocabmeld-{version}.xpi"
  },
  "keywords": [
    "chrome-extension",
    "language-learning",
    "immersive-learning",
    "vocabulary"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "webextension-polyfill": "^0.12.0"
  },
  "devDependencies": {
    "web-ext": "^9.2.0"
  }
}
